<%= form_with(model: todo_list, local: true) do |form| %>
  <% if todo_list.errors.any? %>
    <div id="error_explanation">
      <% todo_list.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <tr>
    <td>
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, id: :todo_list_title, class: "form-control" %>
      </div>
    </td>
  </tr>

  <tr>
    <td>
      <div class="field">
        <%= form.label :description %>
        <%= form.text_field :description, id: :todo_list_description, class: "form-control" %>
      </div>
    </td>
  </tr>

  <tr style="text-align: center;">
    <td>
      <div class="actions">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </td>
  </tr>
<% end %>
